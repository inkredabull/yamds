<div class="container text-center">
  <div class="jumbotron row">
    <div class="col-lg-12">
      <hr>
      <h1>Shows</h1>
      <hr>
      <% @shows.each do |artist, events| %>
        <% if events.count > 0 %>
          <h3><%= artist %></h3>
          <h4>Tracks</h4>

          <% @api_urls.each do |url| %>
            <iframe width="100%" height="166" scrolling="no" frameborder="no" src="<%= url %>"></iframe>
          <% end %>

          <h4>You Might Also Like...</h4>
          <% events.each do |e| %>
            <p><%= e['title'] rescue '' %></p>
            <p><%= link_to 'Buy tix', e['ticket_url'], target: '_blank' rescue '' %></p>
          <% end %>
          <hr>
        <% end %>
      <% end %>
    </div>
  </div>

  <footer class="footer">
    <p>&copy; yamds</p>
  </footer>

</div> 
